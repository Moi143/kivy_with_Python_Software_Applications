<ClacWindow>:
    orientation: 'vertical'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 't.jpg'

    BoxLayout:
        id: title 
        size_hint_y: .1
        Label: 
            text : 'Calculator'
            font_size: 30
            bold: True
    BoxLayout:
        id: textinputt
        size_hint_y: .2
        TextInput:
            id: inputt 
            size_hint_y: .5
            padding: 10
            font_size: 27
            background_color:(1,1,2,0)
            focus: True
            foreground_colo:(1.0,1.0,1.0,1.0)
    BoxLayout:
        id: main_btn
        size_hint_y: .7
        padding: 10
        GridLayout:
            id: number
            cols: 4
            spacing: 7


            